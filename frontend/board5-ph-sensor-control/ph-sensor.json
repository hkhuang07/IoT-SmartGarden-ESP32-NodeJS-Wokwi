{
    "name": "ph-sensor",
    "author": "Huynh Quoc Huy",
    "version": "2.0",
    "description": "pH Sensor with dual servo control for acid/alkaline dosing",
    "pins": [
        "VCC",
        "GND",
        "AO",
        "DO"
    ],
    "controls": [
        {
            "name": "ph_value",
            "type": "slider",
            "label": "pH Value",
            "min": 0,
            "max": 14,
            "default": 7,
            "step": 0.1
        },
        {
            "name": "ph_calibration",
            "type": "slider",
            "label": "Calibration Offset",
            "min": -2.0,
            "max": 2.0,
            "default": 0.0,
            "step": 0.1
        },
        {
            "name": "adc_raw_value",
            "type": "slider",
            "label": "ADC Raw Value",
            "min": 0,
            "max": 4095,
            "default": 2048,
            "step": 1
        },
        {
            "name": "auto_mode",
            "type": "switch",
            "label": "Auto Mode",
            "default": true
        },
        {
            "name": "acid_dosing",
            "type": "switch",
            "label": "Acid Dosing Active",
            "default": false
        },
        {
            "name": "alkaline_dosing",
            "type": "switch",
            "label": "Alkaline Dosing Active",
            "default": false
        },
        {
            "name": "ph_threshold",
            "type": "slider",
            "label": "pH Threshold",
            "min": 5.0,
            "max": 9.0,
            "default": 7.0,
            "step": 0.1
        }
    ],
    "ranges": {
        "ph_acidic_min": 6.0,
        "ph_optimal_min": 6.5,
        "ph_optimal_max": 7.5,
        "ph_alkaline_max": 8.0,
        "adc_acid_min": 1200,
        "adc_neutral": 2048,
        "adc_alkaline_max": 2800
    },
    "features": [
        "ADC conversion",
        "pH calibration",
        "Auto/Manual mode",
        "Dual servo control",
        "LCD display",
        "MQTT communication"
    ]
}