{
  "name": "ph-sensor",
  "author": "Huynh Quoc Huy",
  "version": "2.0",
  "description": "pH Sensor with dual servo control for acid/alkaline dosing",
  "pins": ["VCC", "GND", "AO", "DO"],
  "controls": [
    {
      "name": "ph_value",
      "type": "slider",
      "label": "pH Raw ADC (0-4095)",
      "min": 0,
      "max": 4095,
      "default": 2048,
      "step": 1
    }
  ],
  "ranges": {
    "ph_acidic_min": 5.0,
    "ph_optimal_min": 6.5,
    "ph_optimal_max": 7.5,
    "ph_alkaline_max": 9.0,
    "adc_neutral": 2048
  },
  "features": [
    "ADC conversion",
    "pH calibration",
    "Auto/Manual mode",
    "Dual servo control",
    "LCD display",
    "MQTT communication"
  ]
}
