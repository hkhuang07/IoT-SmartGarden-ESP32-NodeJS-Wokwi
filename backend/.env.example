# Smart Garden IoT Backend Environment Configuration

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://iot_smartgarden:IoT_Smart_Garden@cluster0.17bgl.mongodb.net/?appName=Cluster0
DATABASE_NAME=iot_smartgarden

# MQTT Configuration
MQTT_BROKER=mqtt://broker.hivemq.com
MQTT_PORT=1883
MQTT_CLIENT_ID=SmartGarden-Broker
MQTT_KEEPALIVE=60

# API Server Configuration
API_PORT=3001
API_HOST=localhost
API_SECRET_KEY=smart-garden-secret-key-2024

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/smart-garden.log

# Environment
NODE_ENV=development

# Alerts Configuration
ALERT_COOLDOWN=300000
MAX_ALERTS_PER_HOUR=10

# Device Timeout (milliseconds)
DEVICE_TIMEOUT=300000

# Data Retention (days)
DATA_RETENTION_DAYS=30

# Automation Thresholds
LIGHT_LOW_THRESHOLD=300
LIGHT_HIGH_THRESHOLD=900
TEMP_MIN_THRESHOLD=18
TEMP_MAX_THRESHOLD=35
HUMIDITY_MIN_THRESHOLD=40
HUMIDITY_MAX_THRESHOLD=80
SOIL_MOISTURE_CRITICAL=30
SOIL_MOISTURE_LOW=40
SOIL_MOISTURE_OPTIMAL=60

# Pump Control
PUMP_MAX_CONTINUOUS_TIME=1800000
PUMP_MIN_COOLDOWN=300000

# WatchDog Settings
WATCHDOG_TIMEOUT=30

# I2C/SPI Configuration
I2C_DEVICE_TIMEOUT=5000
SPI_TIMEOUT=1000

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# Security
JWT_SECRET=smart-garden-jwt-secret-key-2024
ENCRYPTION_KEY=smart-garden-encryption-key-2024

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_RETENTION_HOURS=24

# Backup Settings
AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7